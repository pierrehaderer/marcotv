}

D=`df|grep '/dev/sd'|grep boot|cut -c 8|tail -1`; #determiner BOOT device
echo $D >BOOTDEV #danger apres RESET 0 ??:
if test $D = a; then SP=sdb; else SP=sda; fi # mettre dans .profile ??

