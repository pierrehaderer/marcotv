ID=`cat INDEX` # verif si l'INDEX commence par _ :: test "${ID:0:1}" 
if test `cat INDEX|cut -c 1` != '_';then echo BUG sd IDX `date` >> BUGmsd;fi
#----- INDEX EST RECUPERE -----sinon, afficher un msg disant microsd KO !!!
fi
#------ TEST FAT32 MICROSD ------------------------------------------------
df|grep "/dev/${SP}1" >/dev/null; GS=$?; # test MOUNT sd, SI !! sd demontee !!
