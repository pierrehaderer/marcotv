#--------REGENERATION SILICIUM-------------------------------------
CHKdd=`ps -ef |grep ' dd '|grep -v grep|wc -l` # test surface partiel
CHKmpv=`ps -ef |grep $PLAY|wc -l`; echo $CHKdd >> CHKdd
#selon puissance CPU et flots simultanes microsd, arreter dd pendant film mpv,
# ET claf affichage pas fini !!!, ou ... lecture "pointille" microsd PAmpv
# au 1er !!! CHKmpv, retarder testSD de Tcach sec, pour gagner sur cp en Cache
# et decalage d autant pour mpv, pour test debut ACE
 if test -s mpvUP; then sleep $Tcach; >mpvUP; fi
if test $CHKdd -eq 0 && test  ! -s clafUP; 
then if test $CHKmpv -ne 2; then ./testSD `cat Parted` $PA  &
else #pendant mpv, la boucle 2 sec n'est plus utile ... ::
for i in 1 2 3 4; do ./testSD `cat Parted` $PAmpv ; done ; sleep 1 ;
