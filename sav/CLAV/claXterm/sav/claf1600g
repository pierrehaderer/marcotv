$TE --$G=1x12+1775+470 --$T=' ' --$H -- sh -c "less -Ps b"  &

sleep 2;$TE --$G=84x2+170+385 --$T='---  CLAVIER  ---' --$H -- sh -c "less -Ps d"  &
sleep 2;$TE --$G=84x1+170+910 --$T=' ' --$H -- sh -c "less -Ps c"  &

echo `ps -ef|grep ' less'|grep -v grep|grep -v zl`|sed 's/marco/\n/g'|cut -d ' ' -f 2 >LPID;read r; kill `cat LPID`
