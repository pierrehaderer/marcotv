if test -s $F/TOUCHOUINON;then echo OUI deja la
else echo >$F/TOUCHOUINON # >$F/OUI; >$F/NON
CM3="tput civis;echo -n 'RETOUR AU FILM';read r; echo > $F/OUI
#echo RECHERCHE >$F/NEXT_SCREEN;"
#CM3="tput civis;echo -n Oui;read r;echo RECHERCHE >$F/NEXT_SCREEN;"
